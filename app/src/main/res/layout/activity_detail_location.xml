<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ui.detailLocation.DetailLocation">
    <FrameLayout
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            android:id="@+id/frameLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0">
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back_icon"
                android:id="@+id/back_icon"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/name_location"
    android:textStyle="bold"
                android:text="Header_name"
        />
    </FrameLayout>
    <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:weightSum="2"
            android:background="@drawable/rounded_corner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:id="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/frameLayout2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintHorizontal_bias="0.0">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dimension"
                android:id="@+id/text_dimension"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type"
                android:id="@+id/text_type"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Created By"
                android:id="@+id/text_created"/>

    </LinearLayout>
    <TextView
            android:paddingHorizontal="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Residence"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Residence not found"
            tools:layout_editor_absoluteX="-16dp"
            android:layout_marginVertical="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:id="@+id/text_not_found"
            app:layout_constraintBottom_toTopOf="@+id/rv_icon_character"/>
    <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/item_character_icon"
            android:paddingHorizontal="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:id="@+id/rv_icon_character"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@null"
    />
</androidx.constraintlayout.widget.ConstraintLayout>