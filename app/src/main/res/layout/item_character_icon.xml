<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@null"
        app:cardBackgroundColor="#FFFFFFFF"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        app:cardCornerRadius="10dp"

>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="5dp"
            android:id="@+id/constraintLayout">
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/image_icon"
                android:src="@drawable/image_dummy"
                tools:ignore="MissingConstraints"
                android:foregroundGravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/text_name"
                android:text="Name Input"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/image_icon" app:layout_constraintTop_toTopOf="parent"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Alive"
                  android:id="@+id/status_character"
                  android:layout_marginTop="2dp"
                  app:layout_constraintTop_toBottomOf="@+id/text_name" android:layout_marginStart="20dp"
                  app:layout_constraintStart_toEndOf="@+id/image_icon"
                  android:background="@drawable/rounded_corner"
                  android:padding="5dp"
                  app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>