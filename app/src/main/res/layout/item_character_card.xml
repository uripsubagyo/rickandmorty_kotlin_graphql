<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="20dp"
        android:padding="10dp"
>
    <FrameLayout android:layout_width="141dp" android:layout_height="166dp"
                 android:background="@drawable/image_dummy"
    >
        <View android:layout_height="match_parent" android:layout_width="match_parent" android:background="@drawable/gradient"/>
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:layout_gravity="bottom"
        >
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="Rick Sanchex"
                      android:textColor="@color/white"
                      android:textStyle="bold"
                      app:layout_constraintBottom_toTopOf="@+id/type_character"
                      app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Human"
                      android:textColor="@color/white"
                      android:id="@+id/type_character"
                      app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                        android:textSize="10sp"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>